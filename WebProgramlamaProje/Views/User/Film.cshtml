@model WebProgramlamaProje.Models.Film

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.FilmAd);
}

<h1>@Html.DisplayFor(model => model.FilmAd)</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4 d-block">
            @{
                        <div style="background-image: url('@Model.FilmPosterUrl');" class="d-block movie-cover">
                            <a asp-controller="User" asp-action="Film" asp-route-id=@Model.FilmID>
                                <h5 class="movie-caption">@Html.DisplayFor(modelItem => Model.FilmAd)</h5>
                                <h5 class="movie-rating">Puan: @Html.DisplayFor(modelItem => Model.FilmPuan)</h5>
                            </a>
                        </div>
            }

        </div>
        <div class="col-md-8  d-block">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmPuan)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmPuan)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmCikis)
                </dt>
                <dd class="col-sm-10">
                    @Model.FilmCikis.ToShortDateString()
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmDesc)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmDesc)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.YonetmenID)
                </dt>
                <dd class="col-sm-10">
                    <a asp-action="Yonetmen" asp-route-id=@Model.YonetmenID>@Html.DisplayFor(model => model.Yonetmen.YonetmenAd) (@Html.DisplayFor(model=> model.Yonetmen.YonetmenYas))</a>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OyuncuID)
                </dt>
                <dd class="col-sm-10">
                    @{
                        foreach(var item in Model.OyuncuList){
                           <a asp-action="Oyuncu" asp-route-id=@item.OyuncuID>@item.OyuncuAd (@item.OyuncuYas)</a>@: |
                    }}
                </dd>
            </dl>

            <form asp-action="Puanla">
                <div class="form-group">
                    <div style="width:304px">
                        <label for="puan" class="form-label">Puanla</label><br>
                        <div class="puanla-label-head">1</div>
                        <div class="puanla-label">2</div>
                        <div class="puanla-label">3</div>
                        <div class="puanla-label">4</div>
                        <div class="puanla-label">5</div><br>

                        <input type="range" class="form-range" min="1" max="5" step="1" id="puan" name="puan">
                    </div>
                </div>
                <input type="hidden" id="filmID" name="filmID" value="@Model.FilmID">
                <div class="form-group">
                    <input type="submit" value="Puanla" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    
</div>