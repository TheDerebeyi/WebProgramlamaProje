@model WebProgramlamaProje.Models.Film

@{
    ViewData["Title"] = "Film";
}

<h1>Film</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilmAd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilmAd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilmPuan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilmPuan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilmCikis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilmCikis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilmDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilmDesc)
        </dd>
    </dl>

    <form asp-action="Puanla">
        <div class="form-group">
            <div style="width:304px">
                <label for="puan" class="form-label">Puanla</label><br>
                <div class="puanla-label-head">1</div>
                <div class="puanla-label">2</div>
                <div class="puanla-label">3</div>
                <div class="puanla-label">4</div>
                <div class="puanla-label">5</div><br>

                <input type="range" class="form-range" min="1" max="5" step="1" id="puan" name="puan">
            </div>
        </div>
        <input type="hidden" id="filmID" name="filmID" value="@Model.FilmID">
        <div class="form-group">
            <input type="submit" value="Puanla" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FilmID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
