@model IEnumerable<WebProgramlamaProje.Models.Film>

@{
    ViewData["Title"] = "Filmler";
}

<h1>Filmler</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FilmAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmPuan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmCikis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yonetmen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmPuan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmCikis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yonetmen.YonetmenAd)
                </td>
                <td>
                    <a asp-action="FilmEdit" asp-route-id="@item.FilmID">Düzenle</a> |
                    <a asp-controller="User" asp-action="Film" asp-route-id="@item.FilmID">Detaylar</a> |
                    <a asp-action="FilmSil" asp-route-id="@item.FilmID">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
