@model WebProgramlamaProje.Models.Yonetmen

@{
    ViewData["Title"] = "Yönetmen Düzenle";
}

<h1>Yönetmen Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="YonetmenEditSubmit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="YonetmenID" />
            <div class="form-group">
                <label asp-for="YonetmenAd" class="control-label"></label>
                <input asp-for="YonetmenAd" class="form-control" />
                <span asp-validation-for="YonetmenAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YonetmenDesc" class="control-label"></label>
                <textarea maxlength="1000" asp-for="YonetmenDesc" class="form-control"></textarea>
                <span asp-validation-for="YonetmenDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YonetmenCinsiyet" class="control-label"></label>
                <select asp-for="YonetmenCinsiyet" class="form-control">
                    @if (Model.YonetmenCinsiyet == "Erkek")
                    {
                        <option value="Erkek" selected>Erkek</option>
                        <option value="Kadın">Kadın</option>
                    }
                    else
                    {
                        <option value="Erkek">Erkek</option>
                        <option value="Kadın" selected>Kadın</option>
                    }
                </select>
                <span asp-validation-for="YonetmenCinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YonetmenYas" class="control-label"></label>
                <input asp-for="YonetmenYas" class="form-control" />
                <span asp-validation-for="YonetmenYas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Yonetmenler">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
